<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp10"
    android:paddingVertical="@dimen/dp16"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_item_idex_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"

        android:text="DOWN JONES"
        android:fontFamily="@font/raleway_black"
        android:textStyle="bold"
        android:textSize="@dimen/sp16"
        android:textColor="@color/brownish_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_item_idex_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="20.047,50"
        android:background="@drawable/tv_shape_2"
        android:textColor="@color/black_six"
        android:textSize="@dimen/sp12"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_idex_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_idex_1" />


    <TextView
        android:id="@+id/tv_item_idex_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="+203 (+1,04%)"
        android:textColor="@color/black"
        android:textSize="@dimen/sp12"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_idex_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_item_idex_2"
        app:layout_constraintTop_toTopOf="@+id/tv_item_idex_4" />

    <TextView
        android:id="@+id/tv_item_idex_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="12dp"
        android:text="NYSE"
        android:textSize="@dimen/sp12"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/greyish_brown"
        app:layout_constraintStart_toStartOf="@+id/tv_item_idex_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_idex_1" />

    <TextView
        android:id="@+id/tv_item_idex_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="8dp"
        android:text="10:44:45"
        android:textColor="@color/brownish_grey"
        android:textSize="@dimen/sp12"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_idex_4"
        app:layout_constraintStart_toEndOf="@+id/tv_item_idex_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_idex_1"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>